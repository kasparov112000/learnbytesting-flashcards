{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "target": "es2022",
        "outDir": "./build",
        "baseUrl": "./app",
        "types": [
            "jest", "node"
        ],
        "typeRoots": [ "./node_modules/@types" ],
        "strictNullChecks": false,
        "skipLibCheck": true
    },
    "include": [
        "app/**/*.ts",
        "config/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "app/tests"
    ]
}
